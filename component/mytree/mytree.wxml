<view class="ul">
  <view class="li-item" bindtap='{{isBranch?"toggle":"tapItem"}}' data-itemid='{{ model.id }}' data-seq="{{model.pageSequence}}">
    <text class="{{(menulistIndex == model.id)?'color':''}}">{{model.title}}</text>
    <image src="https://open.oss.taozhi.cn/audiobook/asset/read/{{open?'shangla':'xiala'}}.png" class="menu-img" wx:if='{{ isBranch }}' ></image>
    <block wx:else>
      <text data-color="{{menulistIndex}}" class="text {{(menulistIndex == model.id)?'color':''}}">{{model.pageSequence}}</text>
    </block>
  </view>
  <view style='padding-left: 50rpx;' wx:if='{{ isBranch }}' hidden='{{ !open }}'>
    <mytree wx:for='{{ model.childMenus }}' wx:key='id' model='{{ item }}' menulistIndex="{{menulistIndex}}"></mytree>
  </view>
</view>
