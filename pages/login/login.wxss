/* pages/login/login.wxss */
@import "../../template/load.wxss";
button::after {
  border: none;
}
page{
  background-color: #d7f5fd;
}
.page-login {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  background: url('https://open.oss.taozhi.cn/audiobook/asset/index/loginback.png');
  background-size: 100%;
  background-position:bottom center;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
}
.nav{
  width:100vw;
  position: fixed;
  top:0;
  left:0;
}
.navtext{
  width: 100%;
  text-align: center;
  height:36rpx;
  font-size:38rpx;
  line-height: 36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
.logo-box {
  text-align: center;
  line-height: 40rpx;
  font-size: 42rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top:140rpx;
}

.logoImg {
  width: 480rpx;
  height: 180rpx;
}
.getUserInfo{
  width:350rpx;
  height:92rpx;
  background:rgba(0,162,255,1);
  border-radius:20rpx;
  font-size:38rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:92rpx;
  margin-top:190rpx;
}