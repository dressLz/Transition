/* pages/read/read.wxss */

.read-page {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
}

.read-page .read-header {
  width: 100%;
  height: 134rpx;
  box-sizing: border-box;
  background: rgba(232, 232, 232, 0.92);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx 0 17rpx;
  border-bottom: 0.5rpx solid rgba(234, 234, 234, 1);
  position: fixed;
  top: 0rpx;
  left: 0;
  animation: mymove 0.6s infinite;
  -webkit-animation: mymove 0.6s infinite;
  animation-iteration-count: 1;
  z-index: 300;
}

@keyframes mymove {
  from {
    top: -134rpx;
  }

  to {
    top: 0rpx;
  }
}

@-webkit-keyframes mymove {
  from {
    top: -134rpx;
  }

  to {
    top: 0rpx;
  }
}

/* 翻译 */

.translation-box {
  position: fixed;
  width: 100%;
  bottom: 190rpx;
  z-index: 1000;
  text-align: center;
}

.translation-box .translation {
  line-height: 72rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  padding: 23rpx 35rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.read-header .header-left {
  display: flex;
  align-items: center;
}

.header-left .btn .icon {
  width: 60rpx;
  height: 60rpx;
}

.slide {
  animation: slide 1s infinite;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
}

@keyframes slide {
  from {
    left: -654rpx;
  }

  to {
    left: 0;
  }
}

.header-left .btn {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(90, 90, 90, 1);
  text-align: center;
  margin-right: 40rpx;
}

.header-left .btn:last-child {
  margin-right: 0;
}

.header-right {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(90, 90, 90, 1);
  text-align: center;
  display: inline-block;
}

.header-right:nth-child(1) {
  margin-right: 40rpx;
}

.header-right .icon {
  width: 60rpx;
  height: 60rpx;
}

/* 底部滑块 */

.bottom-scroll {
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  white-space: nowrap;
  padding: 0 40rpx;
  -webkit-animation: bottomKey 0.6s infinite;
  animation: bottomKey 0.6s infinite;
  animation-iteration-count: 1;
}

@keyframes bottomKey {
  from {
    bottom: -140rpx;
  }

  top {
    bottom: 0rpx;
  }
}

@-webkit-keyframes bottomKey {
  from {
    bottom: -140rpx;
  }

  top {
    bottom: 0rpx;
  }
}

.bottom-scroll .scroll-item-img {
  width: 100%;
  height: 100%;
}

.bottom-scroll .bottom-scroll-item {
  width: 92rpx;
  height: 132rpx;
  background: #f0f0f0;
  margin-left: 8rpx;
  display: inline-block;
  position: relative;
  margin-top: 4rpx;
}

.bottom-scroll .pageindex {
  position: absolute;
  width: 92rpx;
  height: 28rpx;
  background: rgba(255, 255, 255, 0.7);
  bottom: 0;
  left: 0;
  font-size: 20rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 28rpx;
}

.bottom-scroll .active {
  border: 4rpx solid rgba(249, 62, 62, 1);
  border-radius: 6px;
  margin-top: 0;
}

.mask {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 300;
  box-sizing: border-box;
}

/* 左侧目录 */

.leftul-box {
  width: 640rpx;
  background: #fff;
  height: 100vh;
  overflow-y: scroll;
  position: fixed;
  top: 0;
