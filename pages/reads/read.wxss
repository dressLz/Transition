/* 语速 */

.speechrate {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 300;
  position: fixed;
  top: 0;
  left: 0;
}

.speechrate .speechrate-box {
  width: 480rpx;
  height: 180rpx;
  background: #fff;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 24rpx 19rpx;
}

.column {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  text-align: center;
  margin-bottom: 30rpx;
}

.progress-box {
  position: relative;
}

.progress-box .control-box {
  width: 30rpx;
  height: 30rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(0, 165, 255, 1);
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.progress-box .control {
  position: absolute;
  top: -13rpx;
}

.progress-box .control .radius {
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 165, 255, 1);
  border-radius: 50%;
}

.progress-box .sum-box {
  position: absolute;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 162, 255, 1);
  line-height: 22rpx;
  bottom: -42rpx;
}

.Identification {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 31rpx;
}

.textColor {
  color: rgba(249, 62, 62, 1);
}

/* 内容 */

.read-content {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
}

.read-content .book-sequence {
  width: 100%;
  height: 100%;
}

.swiper-item {
  min-height: 100vh;
  display: flex;
  align-items: center;
  overflow-y: auto;
}

.swiper-item-box {
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-y:auto;
}

.swiper-item-box, .swiper-item-box-view {
  width: 100%;
  position: relative;
}

.swiper-item-box .constituency {
  position: absolute;
  border: 2px solid rgba(241, 139, 63, 1);
  background: rgba(204, 111, 42, 0.15);
  border-radius: 8px;
  box-sizing: border-box;
}
.swiper-item-box .constituencys {
  position: absolute;
  /* background: rgba(204, 111, 42, 0.15); */
  border-radius: 8px;
  box-sizing: border-box;
}

.read-content .book-filp {
  animation: flipbook 3s infinite;
  animation-iteration-count: 1;
}

.read-content .book-filp-up {
  animation: flipbooks 3s infinite;
  animation-iteration-count: 1;
}

@keyframes flipbook {
  from {
    transform: rotateZ(0deg) rotateY(0deg) rotateX(0deg);
    transform-origin: 0 0;
  }

  to {
    transform: rotateZ(0deg) rotateY(180deg) rotateX(0deg);
    transform-origin: 0 0;
  }
}

@keyframes flipbooks {
  from {
    transform: rotateZ(0deg) rotateY(180deg) rotateX(0deg);
    transform-origin: 0 0;
  }

  to {
    transform: rotateZ(0deg) rotateY(0deg) rotateX(0deg);
    transform-origin: 0 0;
  }
}

